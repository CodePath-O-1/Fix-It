<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View"/>
        <variable
            name="user"
            type="com.example.fixit.User" />


    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".CommentAdapter">


        <RelativeLayout android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"

            android:layout_marginBottom="5dp"

            android:layout_centerHorizontal="true"
            android:id="@+id/rlComment">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_alignTop="@id/tvComment"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:layout_alignBottom="@id/tvComment"
                android:scaleType="fitXY"
                android:src="@drawable/commentbubble" />

            <TextView
                android:id="@+id/tvComment"
                android:padding="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"


                />
        </RelativeLayout>


        <ImageView
            android:id="@+id/ivProfile"
            android:layout_width="41dp"
            android:layout_marginLeft="20dp"
            android:layout_height="42dp"
            android:layout_below="@+id/rlComment"
            android:loadImage="@{user}" />

        <TextView
            android:id="@+id/tvUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivProfile"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:text="@{user.getKeyUsername()}" />


    </RelativeLayout>



</layout>